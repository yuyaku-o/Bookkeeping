/* pages/login/login.wxss */

.container {
    height: 500px;
    background-color: rgb(248, 248, 248);
}

.head {
    text-align: center;
    padding-bottom: 20px;
}

.logo {
    width: 80px;
    height: 80px;
    margin-top: 20px;
}

.app-name {
    font-size: 16px;
    font-weight: normal;
}

.login-input {
    font-size: 16px;
    padding: 10px 20px;
    border-bottom: 1px solid rgb(248, 248, 248);
    height: 30px;
    line-height: 30px;
}

.login-form-input-group {
    background: #fff;
}

.login-btn-wrapper {
    padding: 20px;
}

.login-btn {
    background-color: #1AAD19;
    border: none;
    color: #fff;
    font-size: 18px;
    /* 只微信登录 */
    margin-top: 80px;
}

.login-btn[disabled] {
    background-color: rgba(235, 77, 69, 0.3) !important;
    color: #fff !important;
}

.login-bot {
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    font-size: 14px;
    color: #ccc;
}

.login-bot text {
    display: inline-block;
    padding-bottom: 20px;
}

.foot {
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 10%;
    width: 100%;
    height: 25%;
    background-color: rgb(248, 248, 248);
}

.other {
    font-size: 14px;
    color: #ccc;
}

.other::after,
.other::before {
    content: '';
    display: inline-block;
    width: 20%;
    height: 1px;
    background-color: #ccc;
    vertical-align: middle;
    margin: 0 10px;
}

.other-btns {
    text-align: center;
    margin-top: 18%;
}

.other-btns image {
    width: 50px;
    height: 50px;
    padding: 0 30px;
}